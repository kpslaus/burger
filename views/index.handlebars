<!DOCTYPE html>
<html>
<head>
	<title>Eat da burger</title>

	<ul>
		{{#each burgers}}
			{{#unless this.devoured}}
			<li>
				{{this.burger_name}}

			<form action="burgers/update/{{this.id}}?_method=PUT"method="POST">
				<input type="hidden" name="devoured" value="true">
				<button type="submit">DEVOUR IT!</button>
			</form>
			</li>
		{{/unless}}
	{{/each}}
	</ul>

	<h2>Add a burger</h2>
	<form class="create-update-form" action="burger/create" method="POST">

	<div class="form-group">
		<label for="burger">Burger Name:</label>
		<input type="text" id="burger" name="name">
	</div>

		<button type="submit">Add Burger</button>
	</form>